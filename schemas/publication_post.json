{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://paperhub.io/api/v0/schemas/publication_post.json#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema_id": {
      "type": "string",
      "additionalProperties": false
    },
    "origins": {
      "type": "array",
      "additionalProperties": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "url": {
            "type": "string"
          },
          "pdf": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "date_added": {
            "type": "string"
          },
          "added_by": {
            "type": "string"
          }
        },
        "required": [
          "url",
          "type",
          "date_added",
          "added_by"
        ]
      }
    },
    "md5sum": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "$ref": "author.json"
      }
    },
    "title": {
      "type": "string"
    },
    "date": {
      "type": "string"
    },
    "journal": {
      "type": "string"
    },
    "volume": {
      "type": "string"
    },
    "number": {
      "type": "string"
    }
  },
  "required": [
    "origins",
    "md5sum",
    "authors",
    "title",
    "date"
  ]
}
